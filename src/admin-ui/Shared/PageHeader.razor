<AppBar Position="@AppBarPosition.Static">
    <Toolbar>
        <IconButton Edge="@IconButtonEdge.Start"
                    Style="margin-right: 16px;"
                    Color="@Color.Inherit"
                    aria-label="menu"
                    OnClick="@LeftMenuOnClickCallback">
            <MenuIcon /> 
        </IconButton>
        <Typography Variant="@TypographyVariant.H6"
                    Style="flex-grow: 1;">
            Identity Server Admin Ui
        </Typography>
        <Button Color="@Color.Inherit" Component="a" href="authentication/login">
            Login
        </Button>
    </Toolbar>
</AppBar>

@code {
    [Parameter]
    public EventCallback LeftMenuOnClickCallback { get; set; }
}